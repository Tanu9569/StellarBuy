<%- include('./partials/header') %>
<div class="w-screen flex items-center justify-center bg-gradient-to-r from-blue-50 via-white to-blue-100 px-4 ">
    <% if(error.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md -translate-y-1/2 p-3 rounded-md bg-red-500 shadow-lg z-50">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
        <% } %>
            <div class="w-full  bg-white shadow-2xl rounded-2xl p-10 flex flex-col md:flex-row gap-10 max-w-6xl w-full">
                <!-- Register Section -->
                <div class="w-1/2 flex items-center justify-center h-screen">
                    <div class="w-full px-6 md:px-10">
                        <h3 class="text-4xl font-bold text-gray-800 mb-1">welcome to <span class="text-blue-500 font-semibold">StellarBuy</span></h3>
                        <h4 class="text-4xl mb-6">create your account</h4>
                        <form autocomplete="off" action="/users/register" method="post">
                            <input
                                class="bg-gray-100 w-full px-4 py-3 rounded-lg mb-4 border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-300"
                                type="text" placeholder="Full Name" name="fullname">
                            <input
                                class="bg-gray-100 w-full px-4 py-3 rounded-lg mb-4 border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-300"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="bg-gray-100 w-full px-4 py-3 rounded-lg mb-4 border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-300"
                                type="password" placeholder="Password" name="password">
                            <input class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 rounded-lg transition-all duration-300 shadow-md" type="submit"
                                value="Create My Account">
                        </form>
                    </div>
                </div>
                 <!-- Login Section -->
                <div class="w-full md:w-1/2 flex items-center justify-center border-t md:border-t-0 md:border-l border-gray-200 pt-10 md:pt-0">
                    <div class="w-full px-6 md:px-10">
                        <h4 class="text-3xl font-semibold text-gray-800 mb-1">Login your account</h4>
                        <p class="text-gray-500 mb-6">Welcome back! Please enter your credentials.</p>
                        <form autocomplete="off" action="/users/login" method="post">
                            <input
                                class="bg-gray-100 w-full px-4 py-3 rounded-lg mb-4 border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-300"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="bg-gray-100 w-full px-4 py-3 rounded-lg mb-4 border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-300"
                                type="password" placeholder="Password" name="password">
                            <input class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 rounded-lg transition-all duration-300 shadow-md" type="submit"
                                value="Login">
                        </form>
                    </div>
                </div>
            </div>
        </div>
            <%- include('./partials/footer') %>